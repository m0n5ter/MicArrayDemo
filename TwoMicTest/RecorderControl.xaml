<GroupBox 
    x:Class="TwoMicTest.RecorderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:twoMicTest="clr-namespace:TwoMicTest"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance twoMicTest:RecorderViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ComboBox Margin="0,0,5,0" Grid.ColumnSpan="2" ItemsSource="{Binding MainViewModel.RecordDevices}" SelectedItem="{Binding Device}"></ComboBox>

        <TextBlock Grid.Row="2" Grid.Column="0">Maximum Level:</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1">1123</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0">Maximum Level:</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1">1123</TextBlock>
    </Grid>

</GroupBox>